<?xml version="1.0" encoding="utf-8"?>
<px>

    <!-- データベース設定 -->
    <database>

        <!-- default -->
        <connection name="default">

            <!-- Charset -->
            <charset>UTF8</charset>
            <!-- /Charset -->

            <!-- Adapter -->
            <adapter>mysql</adapter>
            <!-- /Adapter -->

            <!-- Driver -->
            <driver>mysql</driver>
            <!-- /Driver -->

            <!-- Host -->
            <host>localhost</host>
            <!-- /Host -->

            <!-- User -->
            <user>root</user>
            <!-- /User -->

            <!-- Password -->
            <password></password>
            <!-- /Password -->

            <!-- Database -->
            <database>myapp</database>
            <!-- /Database -->

            <!-- Prefix -->
            <prefix></prefix>
            <!-- /Prefix -->

            <!-- Port -->
            <port></port>
            <!-- /Port -->

            <!-- Socket -->
            <socket></socket>
            <!-- /Socket -->

        </connection>
        <!-- /default -->

    </database>
    <!-- /データベース設定 -->

</px>